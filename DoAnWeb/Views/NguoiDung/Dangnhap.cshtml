
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/UserPage1.cshtml";
}

<h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    <h3 style="text-align:center;background-color:#f3f3f3;padding:10px">Đăng nhập </h3>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.TextBox("TenDN")@ViewData["Loi1"]
                </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu :</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.Password("Matkhau")@ViewData["Loi2"]
                    </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit"value="Đăng nhập "/>
            </td>
        </tr>
    }
    
</table>
<div>
    <h3 style="text-align:center">Nếu chưa có tài khoản , vui lòng <a href="@Url.Action("DangKy","NguoiDung")">đăng ký!!!</a></h3>
</div>
