                @Html.Action("MauSac", "TrangChu")
                     </div>

            </div><!--hetleft-->
            <div id="right">
                <div id="slideshow">
                    <img class="imga1" src="https://bonn.vn/wp-content/uploads/2017/07/6ru.jpg" />

