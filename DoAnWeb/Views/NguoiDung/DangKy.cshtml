
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/UserPage1.cshtml";
}
<table align="center">
    <h2 style="text-align:center;background-color:#f3f3f3;padding:10px">Đăng ký thành viên </h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.TextBox("HotenKH")@ViewData["Loi1"]
                    </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập :</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.TextBox("TenDN")@ViewData["Loi2"]
                </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu :</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.Password("Matkhau")@ViewData["Loi3"]
                </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại :</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.Password("Matkhaunhaplai")@ViewData["Loi4"]
                </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email :</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.TextBox("Email")@ViewData["Loi5"]
                </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa chỉ:</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.TextBox("Diachi")@ViewData["Loi6"]
                </span>
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại :</td>
            <td>
                <span style="color:red;font-style:italic">
                    @Html.TextBox("Dienthoai")@ViewData["Loi7"]
                </span>
            </td>
        </tr>


        <tr style="height:40px">
            <td></td>
            <td>
                <a href="@Url.Action("Dangnhap","NguoiDung")"/>
                <input type="submit" value="Đăng ký " />
            </td>
        </tr>
    }
</table>
<div>
    <h3 style="text-align:center">Nếu đã có tài khoản , vui lòng <a href="@Url.Action("Dangnhap","NguoiDung")">đăng nhập!!! </a></h3>
</div>